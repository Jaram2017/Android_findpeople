<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hak.homework.FirstviewActivity"
    tools:showIn="@layout/app_bar_firstview"
    android:weightSum="10">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:weightSum="10"
        android:background="#faafaa"
        >
        <Button
            android:id="@+id/folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="New Folder"
            android:textSize="20dp" />

        <Button
            android:id="@+id/week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="Week"
            android:textSize="20dp" />

        <Button
            android:id="@+id/personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="Personal"
            android:textSize="20dp" />

        <Button
            android:id="@+id/memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="Memo"
            android:textSize="20dp" />

        <Button
            android:id="@+id/newindex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="+ Create Index"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="5"
        android:background="#c9b138">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST"
            android:background="#aaaaaa"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST"
            android:background="#aaaaaa"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>
