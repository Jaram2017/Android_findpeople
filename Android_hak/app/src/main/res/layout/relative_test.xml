<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:text="TextView"
        android:background="#ffafaf" />

    <TextView
        android:id="@+id/Super"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/View"
        android:textSize="30dp"
        android:text="SuperText"
        android:background="#4441aa"/>

    <TextView
        android:id="@+id/testtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/View"
        android:layout_toRightOf="@+id/Super"
        android:background="#4ca"
        android:text="TestText"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/Blind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLINDTEXT"
        android:textSize="40dp"
        android:background="#4caf50"
        android:layout_below="@id/View"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:id="@+id/Align"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Blind"
        android:text="AlignText"
        android:textSize="30dp"
        android:background="#aa3333"
        android:layout_toRightOf="@id/Blind"
        android:layout_below="@id/testtext" />


</RelativeLayout>